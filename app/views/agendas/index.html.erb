<p id="notice"><%= notice %></p>

<table class="table table-striped" style="margin:0.4%">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Contato</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Email</th>
      <th>Endereco</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Cep</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agendas.each do |agenda| %>
      <tr>
        <td><%= agenda.nome %></td>
        <td><%= agenda.contato %></td>
        <td><%= agenda.telefone %></td>
        <td><%= agenda.celular %></td>
        <td><%= agenda.email %></td>
        <td><%= agenda.endereco %></td>
        <td><%= agenda.cidade %></td>
        <td><%= agenda.estado %></td>
        <td><%= agenda.cep %></td>
        <td><%= button_to 'Editar', edit_agenda_path(agenda), :class => "btn btn-success", :method => :get  %></td>
        <td><%= button_to 'Apagar', agenda, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, :class => "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
